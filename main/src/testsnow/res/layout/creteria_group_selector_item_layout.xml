<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/CreteriaGroupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:duplicateParentState="true"
        android:text="@string/spaceholder"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/main_selector_text_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CreteriaSelectedListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/spaceholder"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/SelectedColor" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/list_devider" />

</LinearLayout>