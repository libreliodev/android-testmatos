<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niveales.testsnowboards"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="beta 3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".TestSnowboardsApplication"
        android:icon="@drawable/tests_snowboards_ic_launcher"
        android:label="@string/tests_snowboards_app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TestSnowboardsMainActivity"
            android:configChanges="keyboard|orientation|screenLayout|screenSize"
            android:icon="@drawable/tests_snowboards_ic_launcher"
            android:label="@string/title_activity_test_snowboards_main"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".lexique.LexiqueActivity"
            android:icon="@drawable/tests_snowboards_ic_launcher"
            android:label="@string/tests_snowboards_app_name"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name="com.niveales.library.ui.privacy.PrivacyActivity" >
        </activity>
        <activity
            android:name="com.niveales.library.ui.activity.TwitterAuthActivity"
            android:theme="@style/Theme.Transparent" >
            
        </activity>
    </application>

</manifest>